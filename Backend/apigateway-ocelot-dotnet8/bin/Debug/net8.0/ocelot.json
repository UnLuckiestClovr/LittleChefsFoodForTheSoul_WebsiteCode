{
  "Routes": [
    {
      "ServiceName": "UserService",
      "DownstreamPathTemplate": "/{everything}",
      "UpstreamPathTemplate": "/user/{everything}",
      "UpstreamHttpMethod": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ],
      "FileCacheOptions": {
        "TtlSeconds": 15
      },
      "LoadBalancerOptions": {
        "Type": "LeastConnection",
        "Key": null,
        "Expiry": 0
      }
    },
    {
      "ServiceName": "BasketService",
      "DownstreamPathTemplate": "/{everything}",
      "UpstreamPathTemplate": "/basket/{everything}",
      "UpstreamHttpMethod": [
        "GET",
        "POST",
